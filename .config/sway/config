### Variables
#
set {
	# Logo key
	$mod Mod4
	# Direction keys that feel more natural to me
	$left j
	$down k
	$up l
	$right semicolon
	# My preferred terminal emulator
	$term footclient
	# My preffered menu
	$menu xfce4-appfinder | xargs swaymsg exec --
}
for_window [app_id="xfce4-appfinder"] floating enable

include {
	/etc/sway/config-vars.d/*
	/etc/sway/config.d/*
	~/.config/sway/themes
	~/.config/sway/outputs/*
	~/.config/sway/keybinds/*
}

#
# Swaybar
#
bar swaybar_command waybar

### Autostart applications
#
exec {
	foot --server
	nheko
	steam -silent
	flatpak run dev.vencord.Vesktop --start-minimized
	light -I
}

### Input configuration
#
input * {
	tap enabled
	natural_scroll disabled
}
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
