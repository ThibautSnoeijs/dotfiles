
include ~/.config/sway/themes

exec light -I

exec /usr/local/bin/swaylock \
	--clock --indicator-idle-visible \
	--indicator-radius 100 \
	--indicator-thickness 7 \
	--ring-color 455a64 \
	--key-hl-color be5046 \
	--text-color ffc107 \
	--text-clear-color ffc107 \
	--text-ver-color ffc107 \
	--text-wrong-color ffc107 \
	--line-color 00000000 \
	--inside-color 00000088 \
	--inside-clear-color 00000088 \
	--inside-ver-color 00000088 \
	--inside-wrong-color 00000088 \
	--separator-color 00000000 \
	-i $background

bar swaybar_command waybar

set {
	$mod Mod4
	$left j
	$down k
	$up l
	$right semicolon
	$term footclient
	$menu xfce4-appfinder | xargs swaymsg exec --
}

for_window [app_id="xfce4-appfinder"] floating enable

input * {
	tap enabled
	natural_scroll disabled
}

include {
	/etc/sway/config-vars.d/*
	/etc/sway/config.d/*
	~/.config/sway/outputs/*
	~/.config/sway/keybinds/*
}

exec {
	foot --server
	nheko
	#steam -silent
	flatpak run dev.vencord.Vesktop --start-minimized
}
